<% flat = data.flats[owner] %>
<div class="small-banner" style="background-image: url('https://kitt.lewagon.com/placeholder/cities/<%=flat.city_slug%>')">
</div>
<div class="flat_desc">
  <!-- Inject flat data in template -->
  <div class="flat_name">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "medium_avatar" %>
    <p><%= flat.name %></p>
  </div>
  <div class="flat_info">
    <h4><%= flat.description %></h4>
    <p><%= flat.city_name %></p>
    <p class="rating">
      <% flat.rating.to_i.times do %>
      <i class="fa fa-star" aria-hidden="true" style="color: #ffb400"></i>
      <% end %>
      <% (5-flat.rating.to_i).times do %>
      <i class="fa fa-star-o" aria-hidden="true" style="color: #ffb400"></i>
      <% end %>
    </p>
  </div>
  <div class="col-xs-12 col-sm-4">
    <form class="flat_form">
      <div class="check">
        <div class="form-group">
          <label for="exampleInputEmail1">Check-in</label>
          <input type="check-in" class="form-control" aria-describedby="emailHelp" placeholder="Enter check-in">
        </div>
        <div class="form-group margin-left">
          <label for="exampleInputEmail1">Check-out</label>
          <input type="check-out" class="form-control" aria-describedby="emailHelp" placeholder="Enter check-out">
        </div>
      </div>
      <div class="form-group">
        <select class="form-control">
          <option></option>
        </select>
      </div>
      <button type="book-it" class="btn btn-primary">Book it</button>
    </form>
  </div>
</div>


